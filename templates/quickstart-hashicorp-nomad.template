                                "/", {
                                    "Ref": "QSS3BucketName"
                                },
                                "/", {
                                    "Ref": "QSS3KeyPrefix"
                                },
                                "/scripts/",
                                "${NOMAD_BOOTSTRAP_FILE}",
                                "\n",
                                "wget ${NOMAD_BOOTSTRAP} \n",
                                "chmod 755 ./${NOMAD_BOOTSTRAP_FILE} \n",
                                "./${NOMAD_BOOTSTRAP_FILE} \n",
                                "/usr/local/bin/cfn-signal -e $? ",
                                "  --stack ", {
                                    "Ref": "AWS::StackName"
                                },
                                " --resource NomadServer ",
                                " --region ", {
                                    "Ref": "AWS::Region"
                                },
                                "\n"
                            ]
                        ]
                    }
                }
